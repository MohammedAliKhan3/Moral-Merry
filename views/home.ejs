<%- include('partials/header', {page: 'home'}); %>

<main class="home-container">
  <!-- Hero Section with Blue Gradient -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title"><%= heroTitle %></h1>
      <p class="hero-subtitle"><%= heroSubtitle %></p>
      <div class="hero-buttons">
        <a href="/admissions" class="cta-button">Apply Now</a>
        <a href="/programs" class="cta-button outline">Learn More</a>
      </div>
    </div>
  </section>

  <section class="about-section">
    <div class="about-content">
      <h2>Our Journey</h2>
      <p>Founded in 1985, Moral Merry has grown from a small community school to a nationally recognized institution. Our commitment to excellence in education has remained unwavering through decades of growth and change.</p>
      <div class="journey-stats">
        <div class="stat">
          <span class="stat-number">30+</span>
          <span class="stat-label">Years of Excellence</span>
        </div>
        <div class="stat">
          <span class="stat-number">90%</span>
          <span class="stat-label">Graduation Rate</span>
        </div>
        <div class="stat">
          <span class="stat-number">10+</span>
          <span class="stat-label">Activities Yearly</span>
        </div>
      </div>
    </div>
  </section>

<!-- Campus Gallery Section -->
<section class="gallery-section">
  <div class="section-header">
    <h2>Our Campus</h2>
    <p class="section-subtitle">State-of-the-art facilities for holistic development</p>
  </div>
  <div class="gallery-grid">
    <% campusImages.slice(0,4).forEach((image) => { %>
      <div class="gallery-item">
        <img src="<%= image.src %>" alt="<%= image.alt %>" class="gallery-image">
        <div class="gallery-caption">
          <h3><%= image.caption %></h3>
          <a href="/gallery" class="gallery-link">View More</a>
        </div>
      </div>
    <% }); %>
  </div>
</section>

  <section class="features-section">
  <h2>Why Choose Moral Merry</h2>
  <div class="features-grid">
    <% features.slice(0,4).forEach((feature) => { %>
      <div class="feature-card">
        <div class="feature-icon"><%= feature.icon %></div>
        <h3><%= feature.title %></h3>
        <p><%= feature.description %></p>
      </div>
    <% }); %>
  </div>
</section>

  <section class="news-section">
    <h2>Latest Updates</h2>
    <div class="news-grid">
      <% news.forEach((item) => { %>
        <article class="news-card">
          <div class="news-image" style="background-image: url('/images/scienceDay.jpg');"></div>
          <div class="news-content">
            <div class="news-date"><%= item.date %></div>
            <h3><%= item.title %></h3>
            <p><%= item.excerpt %></p>
            <a href="/news" class="read-more">Read More →</a>
          </div>
        </article>
      <% }); %>
      <article class="news-card">
        <div class="news-image" style="background-image: url('/images/classroom.jpg');"></div>
        <div class="news-content">
          <div class="news-date">Coming Soon</div>
          <h3>Smart Classes</h3>
          <p>Smart classroom technology is being introduced to enhance interactive learning.</p>
          <a href="/news" class="read-more">Read More →</a>
        </div>
      </article>
    </div>
  </section>
</main>
<%- include('partials/chatbot') %>
<%- include('partials/footer'); %>
<script src="/js/public.js"></script>

