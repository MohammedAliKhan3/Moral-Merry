<%- include('partials/footer') %>

<style>
    /* Basic styling for the coming soon message */
    .coming-soon-message {
        text-align: center;
        padding: 40px 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .coming-soon-message h2 {
        color: #007bff;
        font-size: 2.5em;
        margin-bottom: 15px;
    }

    .coming-soon-message p {
        font-size: 1.1em;
        color: #555;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .coming-soon-message .icon-hourglass {
        color: #ffc107; /* A warning/upcoming color */
        margin-bottom: 20px;
    }

    .contact-btn {
        display: inline-block;
        background-color: #28a745;
        color: white;
        padding: 12px 25px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .contact-btn:hover {
        background-color: #218838;
    }

    /* Hide the form and receipt when "coming soon" is active (though they are removed from HTML directly) */
    #fee-lookup-form,
    #loading-indicator,
    #error-message,
    #fee-details-receipt {
        display: none !important;
    }
</style>

<script>
