<%- include('partials/header', {page: 'admissions'}); %>

<section class="admissions-hero">
  <div class="container">
    <div class="hero-content">
      <h1 data-scroll>Join Our Community</h1>
      <p data-scroll>Begin your Moral Merry journey today</p>
    </div>
  </div>
</section>

<section class="admissions-process">
  <div class="container">
    <div class="section-header" data-scroll>
      <h2>Admissions Process</h2>
      <p>Our straightforward 4-step application process</p>
    </div>
    <div class="process-steps">
      <% steps.forEach((step, index) => { %>
      <div class="process-step" data-scroll data-delay="<%= index * 0.1 %>">
        <div class="step-number"><%= step.number %></div>
        <h3 class="step-title"><%= step.title %></h3>
        <p class="step-description"><%= step.description %></p>
      </div>
      <% }); %>
    </div>
  </div>
</section>

<section class="admissions-deadlines">
  <div class="container">
    <div class="section-header" data-scroll>
      <h2>Application Deadlines</h2>
      <p>Important dates for your application</p>
    </div>
    <div class="deadlines-grid">
      <% deadlines.forEach(deadline => { %>
      <div class="deadline-card" data-scroll>
        <div class="deadline-term"><%= deadline.term %></div>
        <div class="deadline-date"><%= deadline.date %></div>
        <div class="deadline-status <%= deadline.status.toLowerCase() %>">
          <%= deadline.status %>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>

<section class="tuition-section">
  <div class="container">
    <div class="section-header" data-scroll>
      <h2>Tuition & Financial Aid</h2>
      <p>Investing in your child's future</p>
    </div>
    <div class="tuition-grid">
      <% tuition.forEach(item => { %>
      <div class="tuition-card" data-scroll>
        <div class="tuition-grade">Grades <%= item.grade %></div>
        <div class="tuition-amount"><%= item.amount %></div>
        <p class="tuition-note">Per academic year</p>
        <a href="#" class="cta-button small">Financial Aid Info</a>
      </div>
      <% }); %>
    </div>
    <div class="tuition-cta" data-scroll>
      <a href="#" class="cta-button primary">Start Application</a>
      <a href="/contact" class="cta-button secondary">Schedule Tour</a>
    </div>
  </div>
</section>

<%- include('partials/footer'); %>